<?xml version="1.0"?>
<openerp>
	<data>
		<record id="action_academyv8" model="ir.actions.act_window" >
			<field name="name">Academy v8</field>
			<field name="res_model">res.partner</field>
			<field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_academy','=',True)]</field>
            <field name="context" eval="{'default_is_academy':True, 'default_academy_type':'public'}"/>
		</record>
        
        <record id="action_academy_view_tree_viewv8" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="academy_tree_viewv8"/>
            <field name="act_window_id" ref="action_academyv8"/>
        </record>
        
        <record id="action_academy_view_form_viewv8" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="academy_form_viewv8"/>
            <field name="act_window_id" ref="action_academyv8"/>
        </record>
		
        <record id="action_coursev8" model="ir.actions.act_window" >
			<field name="name">Courses v8</field>
			<field name="res_model">coursev8</field>
			<field name="view_type">form</field>
		</record>
        
        <record id="action_teacherv8" model="ir.actions.act_window" >
			<field name="name">Teachers</field>
			<field name="res_model">res.partner</field>
            <field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
            <field name="domain">[('is_teacher','=',True)]</field>
            <field name="context" eval="{'default_is_teacher':True}"/>
		</record>
        
        <record id="action_teacher_view_tree_viewv8" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="teacher_tree_viewv8"/>
            <field name="act_window_id" ref="action_teacherv8"/>
        </record>
        
        <record id="action_teacher_view_form_viewv8" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="teacher_form_viewv8"/>
            <field name="act_window_id" ref="action_teacherv8"/>
        </record>
        
        <record id="action_studentv8" model="ir.actions.act_window" >
			<field name="name">Studentsv8</field>
			<field name="res_model">res.partner</field>
			<field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_student','=',True)]</field>
            <field name="context" eval="{'default_is_student':True}"/>
		</record>
        
        <record id="action_student_view_tree_viewv8" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="student_tree_viewv8"/>
            <field name="act_window_id" ref="action_studentv8"/>
        </record>
        
        <record id="action_student_view_form_viewv8" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="student_form_viewv8"/>
            <field name="act_window_id" ref="action_studentv8"/>
        </record>
        
        <record id="action_attendancev8" model="ir.actions.act_window" >
			<field name="name">Attendance v8</field>
			<field name="res_model">student.attendancev8</field>
			<field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
		</record>
        
        <record id="action_time_tablev8" model="ir.actions.act_window" >
			<field name="name">Time table v8</field>
			<field name="res_model">time.tablev8</field>
			<field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
		</record>
        
        <record id="action_subjectv8" model="ir.actions.act_window" >
			<field name="name">Subject v8</field>
			<field name="res_model">subjectv8</field>
			<field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
		</record>
		
        
		<menuitem id="root_menu_academy"
		          name="Academy Root"        
                  />

        <menuitem id="menu_academy" name="Menu"
                  parent="root_menu_academy" 
				  sequence="10" 			      
				  />
				  
            <menuitem id="menu_course" name="Courses"
                      parent="menu_academy" 
                      sequence="20" 
                      action="action_coursev8"/>
                      
            <menuitem id="menu_teacher" name="Teachers"
                      parent="menu_academy" 
                      sequence="30" 
                      action="action_teacherv8"/>
                      
            <menuitem id="menu_student" name="Students"
                      parent="menu_academy" 
                      sequence="40" 
                      action="action_studentv8"/>
                      
            <menuitem id="menu_attendance" name="Attendance"
                      parent="menu_academy" 
                      sequence="50" 
                      action="action_attendancev8"/>
                      
            <menuitem id="menu_configuration" name="Configuration"
                  parent="root_menu_academy" 
				  sequence="20" 			      
				  />
                      
            <menuitem id="menu_subject" name="Subjects"
                      parent="menu_configuration" 
                      sequence="10" 
                      action="action_subjectv8"/>          
                      
            <menuitem id="menu_time_table" name="Time table"
                      parent="menu_configuration" 
                      sequence="20" 
                      action="action_time_tablev8"/>
                      
            <menuitem id="menu_academy_ext" name="Academy"
                      parent="menu_configuration" 
                      sequence="30" 
                      action="action_academyv8"/>
             
                      
            
	</data>
</openerp>









