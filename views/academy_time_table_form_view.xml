<?xml version="1.0"?>
<openerp>
    <data>
        <record id="time_table_form_viewv8" model="ir.ui.view" >
            <field name="name">Time Table Form v8</field>
            <field name="model">time.tablev8</field>
            <field name="arch" type="xml">
                <form string="Time table">
                    <group>
                        <group>
                            <field name="name" />
                            <field name="description"/>
                        </group>
                    </group>
                    <field name="time_detail_ids">
                        <tree editable="bottom" default_order="sequence">
                            <field name="sequence" widget="handle"/>
                            <field name="name" />
                            <field name="day_of_week"/>
                            <field name="hour_start" widget="float_time"/>
                            <field name="hour_end" widget="float_time"/>
                        </tree>
                    </field>
                </form>
            </field>
        </record>
    </data>
</openerp>
